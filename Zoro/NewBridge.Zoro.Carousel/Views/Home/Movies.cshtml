    <div class="container">
        <div class="header">
        </div>
        <div id="ca-container" class="ca-container">
            <div class="ca-wrapper">
                @foreach (var item in Model)
                {
                    <div class="ca-item">
                        <div class="ca-item-main">
                            <div class="ca-icon" style="background-image:url(../images/@Html.DisplayFor(modelItem => item.Image))"></div>
                            <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                            <h4>
                                <span class="l-ca-quote">&ldquo;</span>
                                <span>@Html.DisplayFor(modelItem => item.Rating)</span>
                                <span class="r-ca-quote">&rdquo;</span>
                            </h4>
                            <a href="#" class="ca-more">more...</a>
                        </div>
                        <div class="ca-content-wrapper">
                            <div class="ca-content">
                                <h6>@Html.DisplayFor(modelItem => item.Original_Title)</h6>
                                <a href="#" class="ca-close">close</a>
                                <div class="ca-content-text">
                                    <p>片名：@Html.DisplayFor(modelItem => item.Title)</p>
                                    <p>年代：@Html.DisplayFor(modelItem=>item.Year)</p>
                                    <p>风格：@Html.DisplayFor(modelItem => item.Genre)</p>
                                    <p>导演：@Html.DisplayFor(modelItem => item.Directors)</p>
                                    <p>演员：@Html.DisplayFor(modelItem => item.Casts)</p>
                                    <p>剧情：@Html.DisplayFor(modelItem => item.Summary)</p>
                                </div>
                                <ul>
                                    <li><a href=@string.Format("https://movie.douban.com/subject/{0}/",item.Id)>阅读更多</a></li>
                                    @*<li><a href="#">与人分享</a></li>*@
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
