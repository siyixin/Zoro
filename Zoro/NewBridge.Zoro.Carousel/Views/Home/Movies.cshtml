@model IEnumerable<NewBridge.Zoro.Carousel.Models.Movie>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>易泰电影资料库</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="易泰电影资料库" />
    <meta name="keywords" content="jquery, conent slider, content carousel, circular, expanding, sliding, css3" />
    <meta name="author" content="Codrops" />
    <link rel="shortcut icon" href="~/favicon.ico">
    <link href="~/Content/demo.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.jscrollpane.css" media="all" />
    @*<link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow&v1' rel='stylesheet' type='text/css' />
        <link href='http://fonts.googleapis.com/css?family=Coustard:900' rel='stylesheet' type='text/css' />
        <link href='http://fonts.googleapis.com/css?family=Rochester' rel='stylesheet' type='text/css' />*@
</head>
<body>
    <div class="container">
        <div class="header">
            @{Html.RenderAction("Menu", "Nav"); }
        </div>
        <h1>易泰电影资料库<span>movies @@ 10.63.41.50</span></h1>
        <div id="ca-container" class="ca-container">
            <div class="ca-wrapper">
                @foreach (var item in Model)
                {
                    <div class="ca-item">
                        <div class="ca-item-main">
                            <div class="ca-icon" style="background-image:url(../images/@Html.DisplayFor(modelItem => item.Image))"></div>
                            <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                            <h4>
                                <span class="l-ca-quote">&ldquo;</span>
                                <span>@Html.DisplayFor(modelItem => item.Rating)</span>
                                <span class="r-ca-quote">&rdquo;</span>
                            </h4>
                            <a href="#" class="ca-more">more...</a>
                        </div>
                        <div class="ca-content-wrapper">
                            <div class="ca-content">
                                <h6>@Html.DisplayFor(modelItem => item.Original_Title)</h6>
                                <a href="#" class="ca-close">close</a>
                                <div class="ca-content-text">
                                    <p>片名：@Html.DisplayFor(modelItem => item.Title)</p>
                                    <p>年代：@Html.DisplayFor(modelItem=>item.Year)</p>
                                    <p>风格：@Html.DisplayFor(modelItem => item.Genre)</p>
                                    <p>导演：@Html.DisplayFor(modelItem => item.Directors)</p>
                                    <p>演员：@Html.DisplayFor(modelItem => item.Casts)</p>
                                    <p>剧情：@Html.DisplayFor(modelItem => item.Summary)</p>
                                </div>
                                <ul>
                                    <li><a href="#">阅读更多</a></li>
                                    <li><a href="#">与人分享</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <h5>作者 4542，版本 beta</h5>
    </div>
    <script type="text/javascript" src="~/Scripts/jquery-1.6.2.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.easing.1.3.js"></script>
    <!-- the jScrollPane script -->
    <script type="text/javascript" src="~/Scripts/jquery.mousewheel.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.contentcarousel.js"></script>
    <script type="text/javascript">
			$('#ca-container').contentcarousel();
    </script>
</body>
</html>
